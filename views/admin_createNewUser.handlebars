	<form class="form-user" method="post">
	  <div class="form-group row">
		<label for="nameOnAward" class="col-sm-3 col-form-label">First Name</label>
		<div class="col-sm-10">
		  <input type="text" class="form-control" id="nameOnAward" placeholder="Name">
		</div>
	  </div>
	  <div class="form-group row">
		<label for="nameOnAward" class="col-sm-3 col-form-label">Last Name</label>
		<div class="col-sm-10">
		  <input type="text" class="form-control" id="nameOnAward" placeholder="Name">
		</div>
	  </div>
	  <div class="form-group row">
		<label for="awardTypeDropdown" class="col-sm-3 col-form-label">User Type</label>
		<div class="col-sm-10">
		  <select class="form-control" name="awardTypeDropdown">
					{{#each awardType}}
					<option value="{{id}}">{{name}}</option>
					{{/each}}
				</select>
		</div>
	  </div>
	    <div class="form-group row">
			<label for="inputEmail3" class="col-sm-3 col-form-label">Email</label>
			<div class="col-sm-10">
			  <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
			</div>
		</div>
		  <div class="form-group row"> <!-- Date input -->
			<label  for="date" class="col-sm-4 col-form-label">Password</label>
			<div class="col-sm-10">
				<input type="text"class="form-control" id="password" name="password" placeholder="Password">
			</div>
		  </div>
		  <div class="form-group row">
			<div class="col-sm-10">
			  <button type="submit" class="btn btn-secondary">Submit</button>
			</div>
		  </div>
	</form>
