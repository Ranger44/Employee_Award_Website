	<form class="form-user" method="post">
	  <div class="form-group row">
		<label for="currentName" class="col-sm-4 col-form-label">Current Name:</label>
		<div class="col-sm-8">
		  <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="User's Name">
		</div>
	  </div>
	  <div class="form-group row">
		<label for="inputPassword" class="col-sm-4 col-form-label">Change Name</label>
		<div class="col-sm-10">
		  <input type="text" class="form-control" id="nameChange" placeholder="Name">
		</div>
	  </div>
	  <div class="form-group row">
		<div class="col-sm-10">
		  <button type="submit" class="btn btn-secondary">Submit</button>
		</div>
	  </div>
	</form>
	
	
	<form class="form-user" id="upload-image-form" action="" method="post" enctype="multipart/form-data">
	<p class="lead">Select a PNG or JPEG image</p>
	  <div id="image-preview-div" style="display: none">
		<label for="exampleInputFile">Selected image:</label>
		<br>
		<img id="preview-img" src="noimage">
	  </div>
	  <div class="form-group">
		<input type="file" name="file" id="file" required>
	  </div>
	  <button class="btn btn-secondary" id="upload-button" type="submit">Upload Image</button>
	</form>
	
